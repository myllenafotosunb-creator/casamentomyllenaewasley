 <div class="intro-box">
  <h2><span class="greeting">"At√© aqui o Senhor nos sustentou" 1Sm 7,12</span> 
    <span class="heart orange">üíõüß°</span>
   
     </h2>
  <p>Estamos muito felizes em convidar voc√™ para nosso casamento!</p>
  <p><strong>Myllena & Wasley</strong></p>
  <p>Por favor, confirme sua presen√ßa abaixo:</p>
</div>



  
  <div class="form-box" id="loginBox">
    <p>Digite seu primeiro nome e telefone com DDD+9 para confirmar sua presen√ßa.</p>
    <input type="text" id="name" placeholder="Primeiro nome"><br><br>
    <input type="text" id="phone" placeholder="Telefone. Ex: 61998765432 "><br><br>
    <button onclick="login()">Entrar</button>
  </div>

  <div class="family-box" id="familyBox" style="display:none;">
    <h2>Confirme os convidados:</h2>
    <div id="guestList"></div>
    <button class="confirm" onclick="submitConfirmation()">Confirmar Presen√ßa</button>
  </div>

  <script>
    // Substitua pela URL do seu Apps Script
    const SCRIPT_URL = "https://script.google.com/macros/s/AKfycbyYc-jZ01RtN9H58heaoKF0h6LvdaD_KGoaCGvP_VDgk20aPEZYi0_EzPPCE4g-W3M3mw/exec";


    // Convidados cadastrados
    const families = {
      "Myllena|61993133348": ["Mel", "Pandora", "Alaska"],
      "Mirella|61991388359": ["Bianca", "Isabela", "Tilinha"]
    };

    let selectedGuests = {};
    let currentRep = "";
    let currentPhone = "";

    function login() {
      const name = document.getElementById("name").value.trim();
      const phone = document.getElementById("phone").value.trim();
      const key = `${name}|${phone}`;
      
      if (families[key]) {
        currentRep = name;
        currentPhone = phone;
        document.getElementById("loginBox").style.display = "none";
        document.getElementById("familyBox").style.display = "block";
        loadGuests(families[key]);
      } else {
        alert("Nome ou telefone n√£o encontrados. Tente novamente.");
      }
    }

    function loadGuests(guests) {
      const guestListDiv = document.getElementById("guestList");
      guestListDiv.innerHTML = "";
      guests.forEach(guest => {
        selectedGuests[guest] = null;
        const div = document.createElement("div");
        div.classList.add("guest");
        div.innerHTML = `
          <span>${guest}</span>
          <div>
            <button class="yes" onclick="setResponse('${guest}', true)">Sim</button>
            <button class="no" onclick="setResponse('${guest}', false)">N√£o</button>
          </div>
        `;
        guestListDiv.appendChild(div);
      });
    }

    function setResponse(guest, response) {
  selectedGuests[guest] = response;

  // Seleciona os bot√µes do convidado
  const guestDivs = document.querySelectorAll(".guest");
  guestDivs.forEach(div => {
    if(div.querySelector("span").textContent === guest){
      const buttons = div.querySelectorAll("button");
      buttons.forEach(btn => btn.style.opacity = "0.5"); // deixa todos meio apagados
      if(response){ 
        buttons[0].style.opacity = "1"; // bot√£o "Sim" destacado
      } else { 
        buttons[1].style.opacity = "1"; // bot√£o "N√£o" destacado
      }
    }
  });
}


   function submitConfirmation() {
  const confirmBtn = document.querySelector(".confirm");
  confirmBtn.disabled = true;          // desativa o bot√£o para evitar m√∫ltiplos cliques
  confirmBtn.style.opacity = "0.5";    // deixa visualmente ‚Äúclicado‚Äù

  fetch(SCRIPT_URL, {
    method: "POST",
    mode: "no-cors",
    headers: { "Content-Type": "application/json" },
    body: JSON.stringify({
      representante: currentRep,
      telefone: currentPhone,
      respostas: selectedGuests
    })
  }).then(() => {
    confirmBtn.textContent = "Confirmado! üíõ"; // muda o texto
    alert("Presen√ßa confirmada com sucesso! Obrigado üß°");
  }).catch(err => {
    confirmBtn.disabled = false;
    confirmBtn.style.opacity = "1";
    alert("Erro ao enviar confirma√ß√£o.");
    console.error(err);
  });
}

  </script>
